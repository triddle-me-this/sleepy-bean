package testSetup;

import core.console.cartridge.Cartridge;
import core.gameObjects.entities.activeEntities.Player;
import graphics.AdvancedGraphics;

public class ShooterCartridge extends Cartridge{

	Player player;
	
	public ShooterCartridge(){
		// TODO Auto-generated constructor stub
	}

	@Override
	public void start() {
		currentGS = new TestState();
		currentGS.getEntityStorage().addQueue(player);
	}

	@Override
	public void update() {
		currentGS.update();
	}

	@Override
	public void draw(AdvancedGraphics pen) {
		pen.drawString("Cartridge Copyright!", 200, 200);
		currentGS.draw(pen);
	}

	@Override
	public void debugDraw(AdvancedGraphics pen) {
		currentGS.debugDraw(pen);
	}

}
